// BIND configuration file for OpenShift {{ openshift.cluster.name }}
// Generated by Ansible

options {
    listen-on port 53 { 127.0.0.1; {{ ansible_default_ipv4.address }}; };
    listen-on-v6 port 53 { ::1; };
    directory "{{ dns.zoneDir }}";
    dump-file "{{ dns.zoneDir }}/data/cache_dump.db";
    statistics-file "{{ dns.zoneDir }}/data/named_stats.txt";
    memstatistics-file "{{ dns.zoneDir }}/data/named_mem_stats.txt";
    allow-query { localhost; {{ openshift.networking.machineCIDR }}; };
    
    recursion yes;
    
    dnssec-enable yes;
    dnssec-validation yes;
    
    managed-keys-directory "{{ dns.zoneDir }}/dynamic";
    
    pid-file "/run/named/named.pid";
    session-keyfile "/run/named/session.key";
    
    # Forward unresolved queries to upstream DNS
    forwarders {
{% if dns.forwarders is defined %}
{% for forwarder in dns.forwarders %}
        {{ forwarder }};
{% endfor %}
{% else %}
        8.8.8.8;        # Google DNS (default)
        8.8.4.4;        # Google DNS (default)
{% endif %}
    };
};

logging {
    channel default_debug {
        file "data/named.run";
        severity dynamic;
    };
};

# Forward zone for cluster domain
zone "{{ openshift.cluster.name }}.{{ openshift.cluster.baseDomain }}" IN {
    type master;
    file "{{ dns.fwdFile }}";
    allow-update { none; };
};

# Forward zone for base domain
zone "{{ openshift.cluster.baseDomain }}" IN {
    type master;
    file "{{ dns.fwdFile }}";
    allow-update { none; };
};

# Reverse zone
{% set octets = openshift.networking.machineCIDR.split('.') %}
zone "{{ octets[2] }}.{{ octets[1] }}.{{ octets[0] }}.in-addr.arpa" IN {
    type master;
    file "{{ dns.revFile }}";
    allow-update { none; };
};

include "/etc/named.rfc1912.zones";
include "/etc/named.root.key";


---
# EXAMPLE secrets file - copy to secrets.yml and encrypt with ansible-vault
# Commands:
#   cp vars/secrets.yml.example vars/secrets.yml
#   # Edit vars/secrets.yml with your actual values
#   ansible-vault encrypt vars/secrets.yml
# To edit encrypted file: ansible-vault edit vars/secrets.yml

proxmox_secrets:
  # Proxmox API token ID - create in Proxmox UI under Datacenter > Permissions > API Tokens
  api_token_id: "your-api-token-name"
  
  # Proxmox API token secret - generated when creating the API token
  api_token_secret: "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
  
  # Proxmox root password (alternative to API tokens)
  api_password: "your-secure-password"

openshift_secrets:
  # For OKD: Use the fake pull secret below
  # For OpenShift: Get your pull secret from https://cloud.redhat.com/openshift/install/pull-secret
  PullSecret: '{"auths":{"fake":{"auth":"aWQ6cGFzcwo="}}}'

  # SSH public key for accessing OpenShift nodes
  # Generate with: ssh-keygen -t rsa -b 4096 -C "your-email@example.com"
  # Then copy the content of ~/.ssh/id_rsa.pub
  ssh_key: 'ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQ... your-email@example.com'
